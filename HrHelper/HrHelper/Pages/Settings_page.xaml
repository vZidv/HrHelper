<Page x:Class="HrHelper.Pages.Settings_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HrHelper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings_page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Тема приложения" TextWrapping="Wrap"
                    Style="{StaticResource headerTextBlock}"/>
                <ComboBox x:Name="themeColors_cb"
                    Width="250" Margin="10"
                    Style="{StaticResource defaultComboBoxStyle}" SelectionChanged="themeColors_cb_SelectionChanged" >
                    <ComboBoxItem Content="Светлая"/>
                    <ComboBoxItem Content="Темная"/>
                </ComboBox>
            </StackPanel>
            
        </Grid>
            <Button x:Name="deleteDb_but" Grid.Row="1"
            Style="{StaticResource defaultBut}" 
                Background="{StaticResource Dnd}"
                Content="Удалить базу данных" Click="deleteDb_but_Click"/>
    </Grid>
</Page>
