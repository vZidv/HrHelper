<Page x:Class="HrHelper.Pages.Summary_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HrHelper.Pages"
      mc:Ignorable="d" 
     d:DesignHeight="800" d:DesignWidth="1500"
      Title="SummaryEdit_page" Unloaded="Page_Unloaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Row="0" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <Border  Width="220" Height="270"
                Margin="20,0" CornerRadius="15" Grid.Column="0" Grid.Row="0">
                    <Border.Background>
                        <ImageBrush x:Name="photo_image" ImageSource="/Source/NoImage.png"/>
                    </Border.Background>
                </Border>

                <StackPanel>

                    <TextBlock x:Name="fullname_tblock" FontSize="30" Margin="20" HorizontalAlignment="Left"
                               Text="Димитрий Мировец Сергеевич"
                        Style="{StaticResource defaultTextBlock}"/>
                    <Border Background="{StaticResource Dnd}" CornerRadius="20" x:Name="status_border"
                        Height="40" Width="300" HorizontalAlignment="Left" Margin="20,0">
                        <TextBlock Text="Отказ" x:Name="status_tblock"
                                   Style="{StaticResource defaultTextBlock}"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <Polygon Stroke="{StaticResource White}" Points=" 
                 0,20
                 465,20" Margin="25,0,40,0"/>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Возраст" HorizontalAlignment="Left" Margin="20,10" FontSize="20"
                               Style="{StaticResource defaultTextBlock}"/>
                        <TextBlock Text="2003.05.07 (19 годиков)" x:Name="dateBirthdayAge_tblock"
                                   FontWeight="DemiBold" 
                                   VerticalAlignment="Center"
                                   Style="{StaticResource defaultTextBlock}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Пол" HorizontalAlignment="Left" Margin="20,10" FontSize="20"
                               Style="{StaticResource defaultTextBlock}"/>
                        <TextBlock Text="мужской" x:Name="gender_tblock"
                                   FontWeight="DemiBold" 
                                   VerticalAlignment="Center"
                                   Style="{StaticResource defaultTextBlock}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,15,20,10">
                        <Button Content="Excel" Background="{StaticResource Online}" FontSize="23"
                            Style="{StaticResource defaultBut}" Margin="10,0"/>
                        <Button Content="Word" Background="{StaticResource Purple}" FontSize="23"
                            Style="{StaticResource defaultBut}" Margin="10,0"/>
                    </StackPanel>
                </StackPanel>

            </StackPanel>

        </Grid>
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Button Content="Редактировать" HorizontalAlignment="Right"
                        Style="{StaticResource defaultBut}"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock Text="Изменить статус" Style="{StaticResource defaultTextBlock}"/>
                    <ComboBox Text="Отказ" x:Name="statusChange_cb"
                              Margin="30,5"
                        Style="{DynamicResource defaultComboBoxStyle}"  IsEditable="True" SelectionChanged="statusChange_cb_SelectionChanged">
                        <ComboBoxItem>

                        </ComboBoxItem>
                    </ComboBox>
                </StackPanel>

            </Grid>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel 
                Orientation="Horizontal" HorizontalAlignment="Left">
                <Grid>
                    <Border Background="{StaticResource Channels}" CornerRadius="12" Margin="5,59,5,60"/>
                    <StackPanel Margin="20,0" x:Name="contacts_sp">
                        <TextBlock Text="Контакты"
                               Style="{StaticResource headerTextBlock}"/>
                        <Polygon Stroke="{StaticResource White}" Points=" 
                 5,10
                 250,10" Margin="0"/>

                    </StackPanel>
                </Grid>
                <Grid>
                    <Border Background="{StaticResource Channels}" CornerRadius="12" Margin="5,59,5,60"/>
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Место проживания" 
                               Style="{StaticResource headerTextBlock}"/>
                        <Polygon Stroke="{StaticResource White}" Points=" 
                 5,10
                 250,10" Margin="0"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Город" Style="{StaticResource defaultTextBlock}"/>
                            <TextBlock Text="Боровичи" 
                            x:Name="town_tblock"  
                                   Style="{StaticResource valueTextBlock}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Адрес" Style="{StaticResource defaultTextBlock}"/>
                            <TextBlock Text="Новгородская область.Боровичи.улПушкниа.12" 
                            x:Name="address_tblock"  TextWrapping="Wrap"
                                   Style="{StaticResource valueTextBlock}"/>
                        </StackPanel>

                    </StackPanel>
                </Grid>
                <Grid>
                    <Border Background="{StaticResource Channels}" CornerRadius="12" Margin="5,59,5,60"/>
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Пр.Место работы" 
                               Style="{StaticResource headerTextBlock}"/>
                        <Polygon Stroke="{StaticResource White}" Points=" 
                 5,10
                 250,10" Margin="0"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Компания" Style="{StaticResource defaultTextBlock}"/>
                            <TextBlock Text="Пятерочка" 
                            x:Name="company_tblock"  TextWrapping="Wrap"
                                   Style="{StaticResource valueTextBlock}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Должность" Style="{StaticResource defaultTextBlock}"/>
                            <TextBlock Text="Уборщик" 
                            x:Name="jobTitle_tblock"  TextWrapping="Wrap"
                                   Style="{StaticResource valueTextBlock}"/>
                        </StackPanel>

                        <StackPanel Margin="0,10">
                            <TextBlock Text="Образование" 
                               Style="{StaticResource headerTextBlock}"/>
                            <Polygon Stroke="{StaticResource White}" Points=" 
                 5,10
                 250,10" Margin="0"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Образование" Style="{StaticResource defaultTextBlock}"/>
                                <TextBlock Text="Высшее" 
                             TextWrapping="Wrap"
                                   Style="{StaticResource valueTextBlock}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Уч.Заведение" Style="{StaticResource defaultTextBlock}"/>
                                <TextBlock Text="Бит" 
                             TextWrapping="Wrap"
                                   Style="{StaticResource valueTextBlock}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid>
                    <Border Background="{StaticResource Channels}" CornerRadius="12" Margin="5,59,5,60"/>
                    <StackPanel Margin="20,0">
                        <TextBlock Text="Комментарии" 
                               Style="{StaticResource headerTextBlock}"/>
                        <Polygon Stroke="{StaticResource White}" Points=" 
                 5,10
                 250,10" Margin="0"/>
                        <TextBox x:Name="comments_tb"
                        FontSize="22" TextWrapping="Wrap" Height="300"
                        Style="{StaticResource defaultTextbox}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
