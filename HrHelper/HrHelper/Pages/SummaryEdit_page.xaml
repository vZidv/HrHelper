<Page x:Class="HrHelper.Pages.SummaryEdit_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HrHelper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SummaryEdit_page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.27*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border  
                Margin="7" CornerRadius="15" Grid.Column="0" Grid.Row="0">
            <Border.Background>
                <ImageBrush x:Name="photo_image"/>
            </Border.Background>
        </Border>

        <Grid Grid.Row="0" Grid.Column="1">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBox Text="Name" x:Name="name_tb"
                        Style="{DynamicResource defaultTextbox}" Height="40" Width="200"/>
                    <TextBox Text="LastName"  x:Name="lastname_tb"
                        Style="{DynamicResource defaultTextbox}" Height="40" Width="200"/>
                    <TextBox Text="Patronymic"  x:Name="patronymic_tb"
                        Style="{DynamicResource defaultTextbox}" Height="40" Width="200"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
