<Page x:Class="HrHelper.Pages.UserAdd_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HrHelper.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserAdd_page">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин" HorizontalAlignment="Left"
                       Style="{StaticResource defaultTextBlock}"/>
                <TextBox x:Name="login_tb" Text=""
                    Style="{StaticResource defaultTextbox}"/>
                <TextBlock Text="Пароль" HorizontalAlignment="Left"
                       Style="{StaticResource defaultTextBlock}"/>
            <TextBox x:Name="password_tb" Text=""
                    Style="{StaticResource defaultTextbox}"/>
            <TextBlock Text="Тип" HorizontalAlignment="Left"
                       Style="{StaticResource defaultTextBlock}"/>
            <ComboBox x:Name="userType_cb"/>
                <Button Content="Добавить" x:Name="userAdd_but"
                Style="{StaticResource defaultBut}" Click="userAdd_but_Click"/>
            
        </StackPanel>
    </Grid>
</Page>
