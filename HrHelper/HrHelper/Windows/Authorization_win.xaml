<Window x:Class="HrHelper.Windows.Authorization_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HrHelper.Windows"
        mc:Ignorable="d"
        Title="Authorization_win" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None"
        Height="585" Width="465">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="{Binding Color, Source={StaticResource backColor}}" Offset="0.247"/>
                <GradientStop Color="{Binding Color, Source={StaticResource accentSecontColor}}" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel x:Name="ToolBar" Orientation="Horizontal" Background="Transparent"
                    MouseDown="ToolBar_MouseDown"/>

        <Frame x:Name="mainFrame" Grid.Row="1"/>
    </Grid>
</Window>
