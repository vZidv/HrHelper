<Window x:Class="HrHelper.Windows.Authorization_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HrHelper.Windows"
        mc:Ignorable="d"
        Title="Authorization_win" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None" Background="Transparent" AllowsTransparency="True"
        Height="585" Width="465">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="{StaticResource Chat}" CornerRadius="17"
            Grid.RowSpan="2"/>
        <Border Background="{StaticResource Channels}" CornerRadius="17,17,0,0"
            Grid.Row ="0"/>
        <StackPanel x:Name="ToolBar" Orientation="Horizontal" Background="Transparent"
                    MouseDown="ToolBar_MouseDown"/>

        <Frame x:Name="mainFrame" Grid.Row="1"/>
    </Grid>
</Window>
