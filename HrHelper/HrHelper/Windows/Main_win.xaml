<Window x:Class="HrHelper.Windows.Main_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HrHelper.Windows"
        mc:Ignorable="d"
        Title="Main_win" Height="900" Width="1600" WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Height" Value="125"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="32,0,32,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                
            </Style.Triggers>
                
        </Style>
    </Window.Resources>
    <Grid Background="{StaticResource Chat}">
        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.08*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="{StaticResource Channels}">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>
            <Image Source="/Source/LogoMini.png"
                VerticalAlignment="Top" Height="100" />
            <StackPanel Grid.Row="1" VerticalAlignment="Top">
                <Button x:Name="person_but"
                VerticalAlignment="Top"
                Style="{StaticResource MenuButton}" Click="person_but_Click">
                    <Grid>
                        <Image Source="/Source/Person.png"/>
                    </Grid>
                </Button>
            </StackPanel>
            <StackPanel Grid.Row="2" VerticalAlignment="Center">
                <Button x:Name="settings_but"
                Style="{StaticResource MenuButton}">
                    <Grid>
                        <Image Source="/Source/Settings.png" />
                    </Grid>
                </Button>
                <Button x:Name="exit_but" 
                Style="{StaticResource MenuButton}" Click="exit_but_Click">
                    <Grid>
                        <Image Source="/Source/exit.png" />
                    </Grid>
                </Button>
            </StackPanel>

        </Grid>
        <Frame x:Name="frameMain" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>

</Window>
