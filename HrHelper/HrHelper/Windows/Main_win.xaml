<Window x:Class="HrHelper.Windows.Main_win"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HrHelper.Windows"
        mc:Ignorable="d"
        Title="Main_win" Height="900" Width="1600" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <Style x:Key="MenuButton" TargetType="Button">
            <Setter Property="Height" Value="60"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Grey}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>

            </Style.Triggers>

        </Style>
    </Window.Resources>
    <Border Background="{StaticResource Channels}" CornerRadius="17"
            Grid.ColumnSpan="2" Grid.RowSpan="3">
        <Border.OpacityMask>
            <VisualBrush>
                <VisualBrush.Visual>
                    <Border
                    Background="Black"
                    CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource FindAncestor, AncestorType=Border}}"
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType=Border}}"
                    Height="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType=Border}}"
                    />
                </VisualBrush.Visual>
            </VisualBrush>
        </Border.OpacityMask>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.055*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="toolBar_grid"
                Grid.ColumnSpan="2" Grid.Row="0" Background="{StaticResource Channels}" MouseDown="toolBar_grid_MouseDown" >
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="minWind_but" Style="{StaticResource minWinBut}" Width="50" Click="minWind_but_Click">
                        <Line X1="0" Y1="0" X2="70" Y2="0"  StrokeThickness="10" Margin="15,0">
                            <Line.Style>
                                <Style TargetType="Line">
                                    <Setter Property="Stroke" Value="{StaticResource Chat}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver,ElementName=minWind_but}" Value="true">
                                            <Setter Property="Stroke" Value="{StaticResource Channels}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Line.Style>
                        </Line>
                    </Button>
                    <Button x:Name="maxWind_but" Style="{StaticResource minWinBut}" Width="50" Click="maxWind_but_Click">
                        <Grid>
                            <Border Background="{StaticResource Channels}"
                                Height="11" Width="14" CornerRadius="2" Margin="3,7,3,4" Panel.ZIndex="1"/>
                            <Border Height="19" Width="23" CornerRadius="5" Margin="2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource Chat}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMouseOver,ElementName=minWind_but}" Value="true">
                                                <Setter Property="Background" Value="{StaticResource Channels}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </Grid>
                    </Button>
                    <Button x:Name="close_but" Style="{StaticResource closeBut}" Click="close_but_Click">
                        <Path Data="M1,1L15,15M15,1L1,15" StrokeThickness="3.5">
                            <Path.Style>
                                <Style TargetType="Path">
                                    <Setter Property="Stroke" Value="{StaticResource Chat}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver,ElementName=close_but }" Value="true">
                                            <Setter Property="Stroke" Value="{StaticResource Channels}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Path.Style>
                        </Path>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Background="{StaticResource Channels}" Visibility="Visible" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="0.7*"/>
                    <RowDefinition Height="0.4*"/>
                </Grid.RowDefinitions>
                <Image Source="/Source/LogoMini.png"
                VerticalAlignment="Top" Height="100" />
                <StackPanel Grid.Row="1" VerticalAlignment="Top">
                    
                    <StackPanel>
                        <Button x:Name="person_but"
                VerticalAlignment="Top"
                Style="{StaticResource MenuButton}" Click="person_but_Click">
                            <Grid>
                                <Image Source="/Source/Person.png" Margin="3"/>
                            </Grid>
                        </Button>
                        <TextBlock Text="Кандидаты" FontSize="12" Margin="0"
                                   Style="{StaticResource defaultTextBlock}"/>
                    </StackPanel>
                    
                </StackPanel>
                <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                    <StackPanel>
                    <Button x:Name="settings_but"
                Style="{StaticResource MenuButton}" Click="settings_but_Click">
                        <Grid>
                            <Image Source="/Source/Settings.png" Margin="3" />
                        </Grid>
                    </Button>
                        <TextBlock Text="Настройки" FontSize="12" Margin="0"
                                   Style="{StaticResource defaultTextBlock}"/>
                    </StackPanel>
                    <StackPanel Margin="2,10,0,50">
                    <Button x:Name="exit_but"
                Style="{StaticResource MenuButton}" Click="exit_but_Click">
                        <Grid>
                                <Image Source="/Source/exit.png" Margin="3"/>
                        </Grid>
                    </Button>
                        <TextBlock Text="Выйти" FontSize="12" Margin="0"
                                   Style="{StaticResource defaultTextBlock}"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
            <Border Grid.Row="1" Grid.Column="1" Background="{StaticResource Chat}" CornerRadius="10,0,0,0">
                <Border.OpacityMask>
                    <VisualBrush>
                        <VisualBrush.Visual>
                            <Border
                    Background="Black"
                    CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource FindAncestor, AncestorType=Border}}"
                    Width="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType=Border}}"
                    Height="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType=Border}}"
                    />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Border.OpacityMask>
                <Frame x:Name="frameMain" Grid.Column="1" Grid.Row="1"
                   NavigationUIVisibility="Hidden"/>
            </Border>

        </Grid>


    </Border>


</Window>
